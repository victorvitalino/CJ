.row
  .col-sm-12
    .m-b-md
      %h3.m-b-none 
        %span.pull-right 
          = link_to "categorias", administrator_post_categories_path, class: 'btn btn-info btn-sm'
          = link_to "novo artigo", new_administrator_post_path, class: 'btn btn-primary btn-sm'
        %b Artigos
       
.row
  .col-sm-12
    %section.panel.panel-default
      %header.panel-heading
        %span.label.bg-success.pull-right.m-t-xs  
          = @posts.count
        Listagem
      %table.table.table-striped.m-b-none
        %thead
          %tr
            %th #
            %th Título
            %th Publicado?
            %th Revisado?
            %th Autor
            %th Ações
        %tbody
          - @posts.each_with_index do |post, index|
            %tr
              %td= index + 1
              %td= post.title
              %td= post.publish ? 'publicado' : 'não publicado'
              %td= post.revised ? 'revisado'  : 'não revisado'
              %td= post.author.name if post.author.present?
              %td.col-md-2
                = link_to "editar", edit_administrator_post_path(post), class: 'btn btn-info btn-sm'
                = link_to "excluir", administrator_post_path(post), method: :delete, class: 'btn btn-danger btn-sm'
